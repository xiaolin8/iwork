<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <gradient android:endColor="@color/more_background" android:startColor="@color/more_background" />

            <stroke android:width="1.0px" android:color="@android:color/black" />

            <corners android:radius="2.0dip" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:endColor="@color/more_background" android:startColor="@color/more_background" />

            <stroke android:width="1.0px" android:color="@android:color/black" />

            <corners android:radius="2.0dip" />
        </shape></item>
    <item><shape>
            <gradient android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="1.0px" android:color="@android:color/black" />

            <corners android:radius="2.0dip" />
        </shape></item>

</selector>