<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/gbpContentLayout"
            style="@style/bottomePopwinBg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnPhoto"
                style="@style/bottomePopwinBlueBtnBg"
                android:layout_width="fill_parent"
                android:onClick="pickFromCamera"
                android:text="拍照" />

            <Button
                android:id="@+id/btnAlbum"
                style="@style/bottomePopwinBlueBtnBg"
                android:layout_width="fill_parent"
                android:onClick="pickFromAlbum"
                android:text="从相册选择" />

            <Button
                android:id="@+id/gbpCancel"
                style="@style/bottomePopwinCancelBtnBg"
                android:layout_width="fill_parent"
                android:onClick="cancel"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>