<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/more_menu_Linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="vertical"
                android:padding="@dimen/divider_height" >

                <LinearLayout
                    android:id="@+id/my_headpic_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/more_font"
                        android:text="@string/my_profile" />

                    <ImageView
                        android:id="@+id/my_profile_logo"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10.0dip"
                        android:scaleType="fitCenter" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="vertical"
                android:padding="@dimen/divider_height" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="10.0dip"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/ui_setting_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/more_font"
                        android:text="@string/interface_display" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="10.0dip"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/message_notice_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/more_font"
                        android:text="@string/message_notice" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="10.0dip"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/general_setting_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/more_font"
                        android:text="@string/general_setting" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="10.0dip"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/secure_and_private_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/more_font"
                        android:text="@string/secure_and_private" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="vertical"
                android:padding="@dimen/divider_height" >

                <RelativeLayout
                    android:id="@+id/about_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/more_about_tv"
                        style="@style/more_font"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/about" />

                    <ImageView
                        style="@style/more_triangle"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="30.0dip"
                android:clickable="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_style_alert_dialog_special"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="@string/button_logout"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>