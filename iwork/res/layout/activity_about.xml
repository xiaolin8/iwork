<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ff6bbcf4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_normal_bg" >

        <include layout="@layout/commom_back_btn" />

        <TextView
            android:id="@+id/about_titlebar_titleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/about"
            android:textColor="@color/white"
            android:textSize="22.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/about_Linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleLayout"
        android:background="@color/main_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/aboutLogoIv"
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50.0dip"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_blue" />

        <TextView
            android:id="@+id/aboutVerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            android:text="iwork移动办公系统"
            android:textColor="#ff999999"
            android:textSize="14.0sp" />

        <RelativeLayout
            android:id="@+id/about_relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/feedback_content_edittext_shape"
            android:orientation="vertical"
            android:padding="@dimen/divider_height" >

            <RelativeLayout
                android:id="@+id/checkUpdateLayou"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/more_item_selector"
                android:clickable="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/checkUpdate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/checkforupdate"
                    android:textColor="#ff373737"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/checkUpdateNewTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@id/checkUpdate_tv"
                    android:background="@drawable/more_about_new_bg"
                    android:paddingBottom="3.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingTop="2.0dip"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />
            </RelativeLayout>

            <View
                android:id="@+id/systemsettingLine03"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_below="@id/checkUpdateLayou"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="@dimen/divider_height"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/suggest_relativeLay"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/systemsettingLine03"
                android:background="@drawable/more_item_selector"
                android:clickable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/feedback"
                    android:textColor="#ff373737"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/ic_arrow_right"
                    android:button="@null" />
            </RelativeLayout>

            <View
                android:id="@+id/systemsettingLine04"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_below="@id/suggest_relativeLay"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="@dimen/divider_height"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/help_relativeLay"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@id/systemsettingLine04"
                android:background="@drawable/more_item_selector"
                android:clickable="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/help_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/help"
                    android:textColor="#ff373737"
                    android:textSize="18.0sp" />

                <ImageView
                    android:id="@+id/aboutMoreMarkIv"
                    android:layout_width="8.0dip"
                    android:layout_height="8.0dip"
                    android:layout_alignTop="@id/help_tv"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@id/help_tv"
                    android:src="@drawable/more_about_new_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/ic_arrow_right"
                    android:button="@null" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/copyright_rl"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/main_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/aboutCopyrightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20.0dip"
            android:text="@string/about_copyright"
            android:textColor="#ff999999"
            android:textSize="12.0sp" />
    </RelativeLayout>

</RelativeLayout>